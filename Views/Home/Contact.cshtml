@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">


<head>
    <title>ICREAM - Contact Page</title>
</head>

<body>
    <!-- Contact Start -->
    <div class="container-fluid py-5">
        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <h1 class="section-title position-relative text-center mb-5">Contact Us | צור קשר</h1>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-lg-9">
                    <div class="contact-form bg-light rounded p-5">
                        <div id="success"></div>
                        <form name="sentMessage" id="contactForm" novalidate="novalidate">
                            <div class="form-row">
                                <div class="col-sm-6 control-group">
                                    <input type="text" class="form-control p-4" id="name" placeholder="Your Name" required="required" data-validation-required-message="Please enter your name" />
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="col-sm-6 control-group">
                                    <input type="email" class="form-control p-4" id="email" placeholder="Your Email" required="required" data-validation-required-message="Please enter your email" />
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="control-group">
                                <input type="text" class="form-control p-4" id="subject" placeholder="Subject" required="required" data-validation-required-message="Please enter a subject" />
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="control-group">
                                <textarea class="form-control p-4" rows="6" id="message" placeholder="Message" required="required" data-validation-required-message="Please enter your message"></textarea>
                                <p class="help-block text-danger"></p>
                            </div>
                            <div>
                                <!DOCTYPE html>
                                <html>
                                <head>
                                    <title>Display Message on Button Click</title>
                                    <style>
                                        .message {
                                            display: none;
                                            font-size: 18px;
                                            text-align: center;
                                            color: white;
                                            background-color: red;
                                            padding: 10px;
                                            margin-top: 20px;
                                        }
                                    </style>
                                </head>
                                <body>
                                    <a id="messageButton" class="btn btn-primary btn-block py-3 px-5">Send Message</a>
                                    <div id="successMessage" class="message">Your message has been sent</div>

                                    <script>
                                        document.getElementById("messageButton").addEventListener("click", function (event) {
                                            // נמנע את הרצפות הפעולות המשתרעות לאחר לחיצה על הקישור
                                            event.preventDefault();

                                            // הצג את ההודעה
                                            document.getElementById("successMessage").style.display = "block";
                                        });
                                    </script>
                                </body>
                            </html>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Contact End -->

</body>

</html>
