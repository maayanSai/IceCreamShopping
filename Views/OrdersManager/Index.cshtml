@model IEnumerable<IceCreamsShopping.Models.Order>

@{
    ViewData["Title"] = "Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <style>
        /* עיצוב הטופס */
        form {
            color: black;
            text-align: right;
            float: right; /* מיושב לצד ימין */
            margin-right: 20px; /* מרווח מימין */
        }

        label,
        input[type="date"],
        input[type="submit"] {
            display: block; /* מציג כל אלמנט בשורה נפרדת */
            margin-bottom: 10px; /* מרווח בין כל אלמנט */
        }

        input[type="submit"] {
            background-color: #C1E7EA; /* רקע צבעוני לכפתור סינון */
            color: black;
            border: none;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
        }
    </style>
</head>
<h1 style="color: black; text-align: right; font-size:30px">:היסטוריית הזמנות</h1>

<table  class="table">
    <form method="get" asp-action="FilterByDate">
        <label  for="startDate">: תאריך התחלה</label>
        <input  type="date" id="startDate" name="startDate">

        <label for="endDate">:תאריך סיום</label>
        <input type="date" id="endDate" name="endDate">

        <input type="submit" value="סנן">
    </form>

    
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                @if (item.OrderDate >= ViewBag.StartDate && item.OrderDate <= ViewBag.EndDate)
                {
                    <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                    <!-- שאר העמודות כאן -->
                }
            </tr>
        }
    }

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weather)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsHoliday)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weather)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsHoliday)
            </td>
        </tr>

}
    </tbody>
</table>

<script>
    let dateInput = document.getElementById('startDate');
    let selectedDate = new Date(dateInput.value);
    let formattedDate = selectedDate.toLocaleDateString('en-GB'); // ניתן לשנות את en-GB לפורמט שאתה רוצה

    console.log(formattedDate); // תקבל את התאריך בפורמט הרצוי
</script>
