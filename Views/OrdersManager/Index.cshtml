@model IEnumerable<IceCreamsShopping.Models.Order>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<table class="table">
    <form method="get" asp-action="FilterByDate">
        <label for="startDate">תאריך התחלה:</label>
        <input type="date" id="startDate" name="startDate">

        <label for="endDate">תאריך סיום:</label>
        <input type="date" id="endDate" name="endDate">

        <input type="submit" value="סנן">
    </form>

    
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                @if (item.OrderDate >= ViewBag.StartDate && item.OrderDate <= ViewBag.EndDate)
                {
                    <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                    <!-- שאר העמודות כאן -->
                }
            </tr>
        }
    }

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weather)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsHoliday)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weather)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsHoliday)
            </td>
        </tr>
}
    </tbody>
</table>

<script>
    let dateInput = document.getElementById('startDate');
    let selectedDate = new Date(dateInput.value);
    let formattedDate = selectedDate.toLocaleDateString('en-GB'); // ניתן לשנות את en-GB לפורמט שאתה רוצה

    console.log(formattedDate); // תקבל את התאריך בפורמט הרצוי
</script>
